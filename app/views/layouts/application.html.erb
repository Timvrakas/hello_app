<!DOCTYPE html>
<html>
  <head>
    <title>ASSU Petitioning</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= link_to "Home", root_path %>
  <%= link_to "Users", users_path %>
  <%= link_to "Petitions", petitions_path %>

  <div class="login" >
    <% if user_signed_in? %> 
      Logged in as <%= current_user.id %> <%= button_to "Logout", action: :saml_logout, :controller => "application"%>
    <% else %>
      <%= button_to "Login", action: :saml_login, :controller => "application" %>
    <% end %>
  </div>

  <%= yield %>
  </body>
</html>
