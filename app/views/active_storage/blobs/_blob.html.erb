<figure class="attachment attachment--<%= blob.image? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
  <% if blob.image? %>
      <%= image_tag(blob, alt: blob.try(:caption) || 'attached image with no alt text') %>
  <% else %>
    <%= link_to rails_blob_path(blob, disposition: "attachment") do %>
      <%= image_tag "PDF_icon.png", alt: "download PDF file", size: "64" %> <br>
      <figcaption class="attachment__caption">
        <% if caption = blob.try(:caption) %>
          <%= caption %>
        <% else %>
          <%= blob.filename %>
        <% end %>    
      </figcaption>
    <% end %>
  <% end %>
</figure>