<h2>
  <%= @petition.title %>
</h2>

<div class="field"> 
  <strong>Sponsor:</strong> <%= @petition.user.id %> (<%= @petition.user.name %>)
</div>

<div class="content">
  <%= @petition.content %>
</div>

<div class="link-list">
  <% if user_signed_in? %> 
    <% if @petition.signees.exists?(current_user.id) %>
      <%= link_to 'Unsign Petition', unsign_petition_path(@petition), method: :delete %>
    <% else %>
      <%= link_to 'Sign Petition', sign_petition_path(@petition), method: :post %>
    <% end %>
  <% else %>
    <%= link_to 'Login to Sign Petition', saml_login_path, method: :post %>
  <% end %>
</div>

<div class="signature-list">
  <strong> <%= @petition.signees.length %> Signees: </strong>
  <% @petition.signees.each do |signee| %>
    <div class="signature">
      <%= signee.id %> (<%= signee.name %>)
    </div>
  <% end %>
</div>